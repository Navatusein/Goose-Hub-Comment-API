{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0",
    "title": "Comment API",
    "contact": {
      "name": "Bohdan",
      "url": "https://github.com/Navatusein",
      "email": "boghdan.kutsulima@gmail.com"
    },
    "license": {
      "url": "https://github.com/Navatusein/Goose-Hub-Comment-API/blob/main/LICENSE",
      "name": "MIT"
    }
  },
  "servers": [
    {
      "url": "https://goose-hub.sadkittens.duckdns.org/api/comment-api/v1",
      "description": "Main Server"
    }
  ],
  "paths": {
    "/comment/{id}": {
      "delete": {
        "tags": [
          "comment",
          "authorized",
          "role-user"
        ],
        "summary": "Delete Comment",
        "operationId": "delete-comment-id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Comment Id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorDto"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorDto"
                }
              }
            }
          }
        },
        "security": [
          {
            "jwtToken": []
          }
        ],
        "servers": [
          {
            "url": "https://goose-hub.sadkittens.duckdns.org/api/comment-api/v1",
            "description": "Main Server"
          }
        ]
      }
    },
    "/content/{id}": {
      "get": {
        "tags": [
          "comment",
          "unauthorized"
        ],
        "summary": "Get Comments",
        "description": "Get comments for movie, anime or serial",
        "operationId": "get-content-id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/CommentDto"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorDto"
                }
              }
            }
          }
        },
        "security": [],
        "servers": [
          {
            "url": "https://goose-hub.sadkittens.duckdns.org/api/comment-api/v1",
            "description": "Main Server"
          }
        ]
      },
      "post": {
        "tags": [
          "comment",
          "authorized",
          "role-user"
        ],
        "summary": "Add Comment",
        "operationId": "post-content-id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CommentDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CommentDto"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorDto"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorDto"
                }
              }
            }
          }
        },
        "security": [
          {
            "jwtToken": []
          }
        ],
        "servers": [
          {
            "url": "https://goose-hub.sadkittens.duckdns.org/api/comment-api/v1",
            "description": "Main Server"
          }
        ]
      }
    }
  },
  "tags": [
    {
      "name": "comment"
    },
    {
      "name": "authorized"
    },
    {
      "name": "role-admin"
    },
    {
      "name": "role-user"
    },
    {
      "name": "unauthorized"
    }
  ],
  "components": {
    "securitySchemes": {
      "jwtToken": {
        "type": "apiKey",
        "name": "barrer",
        "in": "header"
      }
    },
    "schemas": {
      "ErrorDto": {
        "type": "object",
        "title": "ErrorDto",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "message": {
            "type": "string"
          },
          "code": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "message",
          "code"
        ]
      },
      "CommentDto": {
        "type": "object",
        "title": "CommentDto",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "userId": {
            "type": "string",
            "format": "uuid"
          },
          "dispatch": {
            "type": "string",
            "format": "date-time"
          },
          "message": {
            "type": "string"
          },
          "thread": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CommentDto"
            }
          }
        },
        "required": [
          "id",
          "userId",
          "dispatch",
          "message"
        ]
      }
    }
  },
  "security": [
    {},
    {
      "jwtToken": []
    }
  ]
}